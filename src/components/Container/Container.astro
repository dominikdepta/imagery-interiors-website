---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div"> {
  width?: "full" | "xl";
}

const { class: className, width = "full" } = Astro.props;
---

<div
  class:list={[
    width === "full" && "max-w-container-full",
    width === "xl" && "max-w-5xl",
    "mx-auto my-0 px-4",
    className,
  ]}
>
  <slot />
</div>
