---
import Button from "../Button/Button.astro";
import Heading from "../Heading/Heading.astro";
import Container from "../Container/Container.astro";
---

<section class="bg-lightGray">
  <Container>
    <div class="flex flex-col md:flex-row">
      <Heading level="2" class="md:w-2/3">
        We believe in the remarkable power of design to influence the quality of
        life.
      </Heading>

      <div class="mt-6 md:mt-0 md:w-1/3 md:flex md:items-center md:justify-end">
        <Button type="link" variant="underlined" href="#"> View all </Button>
      </div>
    </div>
  </Container>
</section>
