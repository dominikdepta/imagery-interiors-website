---
import SectionHalf from "@components/Section/SectionHalf/SectionHalf.astro";
import SectionHalfContent from "@components/Section/SectionHalf/SectionHalfContent.astro";
import SectionHalfImage from "@components/Section/SectionHalf/SectionHalfImage.astro";
import weAreImage from "./assets/interior4.webp";
import Heading from "@components/Heading/Heading.astro";
import Button from "@components/Button/Button.astro";
import Icon from "@components/Icon/Icon.astro";
---

<SectionHalf>
  <SectionHalfContent layout="center" class="bg-lightGray">
    <div class="text-center max-w-[400px]">
      <Heading level="2"
        >Our team is here to design the <span class="italic">perfect</span> living
        space for you</Heading
      >

      <p class="mt-6">
        With over 20 years of experience we are aware that every project is
        unique.
      </p>

      <Button type="link" href="/contact" variant="primary" class="mt-14">
        Contact us
        <Icon type="arrow" slot="after" />
      </Button>
    </div>
  </SectionHalfContent>

  <SectionHalfImage src={weAreImage} alt="tmp" />
</SectionHalf>
