---
import Heading from "@components/Heading/Heading.astro";
import SectionHalf from "@components/Section/SectionHalf/SectionHalf.astro";
import SectionHalfContent from "@components/Section/SectionHalf/SectionHalfContent.astro";
import SectionHalfImage from "@components/Section/SectionHalf/SectionHalfImage.astro";
import { Button } from "@components/Button";
import interior9 from "./assets/interior9.webp";
---

<SectionHalf>
  <SectionHalfImage
    src={interior9}
    alt="Interior design"
    class="object-center lg:object-bottom"
  />

  <SectionHalfContent
    layout="center"
    class="bg-blue min-h-[380px] lg:min-h-[720px]"
  >
    <div class="text-center max-w-[430px]">
      <Heading level="2"
        >Our goal is to make the interior design process a little simpler.</Heading
      >

      <p class="mt-6">
        We are constantly improving our process to provide an efficient design
        service.
      </p>

      <Button
        type="link"
        variant="underlined"
        href="/process"
        className="mt-6 lg:mt-14"
      >
        Our process
      </Button>
    </div>
  </SectionHalfContent>
</SectionHalf>
